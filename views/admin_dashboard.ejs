<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Admin Dashboard</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-dark text-white">
<div class="container mt-5">
    <h1 class="mb-4">Admin Dashboard</h1>

    <h3>Logged in as: <%= adminEmail %></h3>

    <h3 class="mt-4">Registered Users</h3>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>View Chats</th>
                <th>Delete User</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td>
                    <a href="/admin/user/<%= user.email %>" class="btn btn-info btn-sm">View Chats</a>
                </td>
                <td>
                    <form action="/admin/user/<%= user.email %>/delete-user" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>

    <h3 class="mt-5">Admin Password</h3>
    <form action="/admin/send-otp" method="POST" class="mb-3">
        <input type="email" name="email" placeholder="Admin Email" value="<%= adminEmail %>" readonly class="form-control mb-2">
        <button type="submit" class="btn btn-warning">Send OTP to Email</button>
    </form>

    <a href="/logout" class="btn btn-secondary mt-3">Logout</a>
</div>
</body>
</html>
